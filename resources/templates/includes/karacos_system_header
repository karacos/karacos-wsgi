(function(jQuery){
	var kQuery = jQuery.noConflict( true );
	window.jQuery = window.$ = kQuery;
	jQuery(function() {
	  	window.Aloha = window.Aloha || {};
	  
		window.kcQuery = window.kQuery = jQuery;
		Aloha.settings = {	baseUrl: "/_browser/aloha/src/lib",
						locale: "fr-fr",
						jQuery: jQuery,
						floatingmenu: {
							width: 430
						},
						plugins: {
							
							format: {
								editables: {
									'[property*="title"]': [],
